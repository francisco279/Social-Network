<div class="card">
    <div class="card-header bg-dark border border-white">
        <h3 class="card-title text-white">
           <img > UPLOAD AN IMAGE
        </h3>
    </div>
    <div class="card-body bg-dark">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group pb-4">
                <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required> 
                <label for="inputGroupFile" class="custom-File-label" ></label>
            </div>

            <div class="form-group pb-3">
                <label for="">Title for the Image</label>
                <input type="text" name="title" class="form-control text-white bg-dark" required >
            </div>

            <div class="form-group pb-3">
                <label for="">Description for the image</label>
                <textarea name="description" rows="2" class="form-control text-white bg-dark" required></textarea>     
            </div>
            <div class="form-group pb-3">
               <button type="submit" class="btn btn-success">Upload your image</button>
            </div>
        </form>
    </div>
</div>


<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3>RECENT UPLOADS</h3>
    </div>
    <div class="card body bg-dark text-white">
        <div class="row">
            {{#each images}}
                <div class="col-md-4">
                    <a href="/images/{{uniqueId}}">
                        <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>


